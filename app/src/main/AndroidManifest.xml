<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alejandro_neri.city_tourister">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="Inicio" />
        <activity
            android:name=".WelcomeActivity"
            android:label="Prueba"
            android:theme="@style/AppTheme" />
        <activity android:name=".WizardActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
        </activity>
        <activity android:name=".LoginActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapActivity"
            android:label="Mapa" />
        <activity
            android:name=".RoutesActivity"
            android:label="Rutas" />
        <activity
            android:name=".TicketsActivity"
            android:label="Boletos" />
        <activity android:name=".RegisterFirstActivity" />
        <activity android:name=".RegisterSecondActivity" />
        <activity android:name=".PurchaseStep1Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PurchaseStep2Activity" />
        <activity android:name=".PurchaseStep3Activity" />
        <activity android:name=".PurchaseStep4Activity" />
        <activity android:name=".PurchaseStep5Activity"></activity>
    </application>

</manifest>